.dir-container{
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  border: 1px solid #ccc;
  width: 750rpx;
}
.item-container{
  width: 900rpx;
  display: flex;

}

.item-del{
  flex-basis: 150rpx;
  background-color: red;
  text-align: center;
  color: #fff;
}
.item-content{
  flex:2;
  text-align: center;
}
.item-enter{
  background-color: green;
  color:#fff;
  flex: 1;
  text-align: center;
}
.add-container{
  width: 60rpx;
  height: 60rpx;
  position: fixed;
  bottom: 100rpx;
  left: 375rpx;

}
.add-container image{
  display: block;
  width: 100%;
  height: 100%;
}

.inp-box{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
}
.inp-container{
  position: absolute;
  background-color:#fff;
  top:300rpx;
  left: 50%;
  width:500rpx;
  margin-left: -250rpx;
   font-size: 30rpx;
   border-radius: 10rpx;
}
.inp{
  height: 80rpx;
  border: 1px solid #ccc;
  margin-top:40rpx;
  width: 80%;
  margin-left: 10%;
}
.inp-title{
  text-align: center;
  height: 60rpx;
 
  line-height: 60rpx;
}
.inp-op{
  height: 60rpx;
  margin-top: 60rpx;
  display: flex;
  line-height: 60rpx;
  border-top: 1rpx solid #ccc;
}
.inp-op view{
  flex: 1;
  text-align: center;
}
.inp-op view:first-child{
  border-right: 1rpx solid #ccc;
}